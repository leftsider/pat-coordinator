# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-api-audience
AUTH0_ISSUER=https://your-auth0-domain.auth0.com/
AUTH0_ALGORITHM=RS256

# PDFKit Configuration
PDF_STORAGE_PATH=./uploads/pdfs
PDF_TEMP_PATH=./temp/pdfs
PDF_MAX_SIZE_MB=50
PDF_ALLOWED_TYPES=application/pdf
PDF_RETENTION_DAYS=30

# Cloud Storage (if using for PDF storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-pdf-bucket-name

# Optional: PDF Generation Settings
PDF_FONT_PATH=./assets/fonts
PDF_LOGO_PATH=./assets/images/logo.png
PDF_MARGIN_TOP=50
PDF_MARGIN_BOTTOM=50
PDF_MARGIN_LEFT=50
PDF_MARGIN_RIGHT=50
